<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
  <%= link_to image_tag("okuri_logo.png", alt: "okurimori logo") ,
     root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to root_path, :method => :get do %>
           <i class="fa fa-home fa-2x" aria-hidden="true"></i>
           <% end %>
        </li>
        <% if logged_in? %>
        <li class="dropdown">
          <a href= '#' class="dropdown-toggle" data-toggle="dropdown">
          マイアカウント <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "プロフィール", current_user %></li>
            <li><%= link_to "設定", edit_user_path(current_user) %></li>
            <li class="divider"></li>
            <li>
              <%= link_to "ログアウト", logout_path, method: :delete %>
            </li>
          </ul>
        </li>
        <% else %>
        <li><%= link_to login_path, :method => :get do %>
           <i class="fa fa-sign-in fa-2x" aria-hidden="true"></i>
           <% end %>
        </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
