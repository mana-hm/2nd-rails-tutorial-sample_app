<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>おくりもの一覧</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>

<% else %>
<div class = "center jumbotron top_banner">

  <%= link_to "木を植える(新規登録)", signup_path, class: "btn btn-lg"%>

</div>

<% end %>
